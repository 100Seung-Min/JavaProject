<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/splash_background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:text="fiesta"
        android:gravity="center"
        android:textSize="50sp"
        android:fontFamily="@font/courgette_font"/>

    <EditText
        android:id="@+id/edit_email_id"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingStart="60dp"
        android:hint="이메일 아이디 입력"
        android:textColorHint="@color/black"
        android:fontFamily="@font/abeezee_font"
        android:textColor="@color/black"
        android:background="@drawable/login_input_background"/>
    <EditText
        android:id="@+id/edit_pw"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_email_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:paddingStart="60dp"
        android:hint="비밀번호 입력"
        android:textColorHint="@color/black"
        android:fontFamily="@font/abeezee_font"
        android:textColor="@color/black"
        android:background="@drawable/login_input_background"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/login_btn_background"
        android:fontFamily="@font/abeezee_font"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5.5">
        <TextView
            android:id="@+id/find_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3.235"
            android:text="비밀번호 찾기"
            android:fontFamily="@font/abeezee_font"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.045"
            android:background="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/sign_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2.235"
            android:paddingStart="4dp"
            android:text="회원가입"
            android:fontFamily="@font/abeezee_font"
            android:textSize="15sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>