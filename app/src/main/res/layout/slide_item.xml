<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_img"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_img"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_marginStart="10dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="유저이름"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/detail_setting_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_baseline_more_horiz_24"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
    
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_layout"
        android:background="@drawable/view_sns_background"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_img"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/favorite_img"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_star_outline_24"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="크하하"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee_font"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_layout"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>